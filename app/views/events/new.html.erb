<h1>Dodanie nowego wydarzenia</h1>

<%= form_for @event, url: events_path, html: { method: :post } do |form| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label "Nazwa artysty" %>
      <%= form.text_field :artist, id: :event_artist %>
    </div>
  
    <div class="field">
      <%= form.label "Krótki opis" %>
      <%= form.text_field :description, id: :event_description %>
    </div>
  
    <div class="field">
      <%= form.label "Cena minimalna" %>
      <%= form.number_field :price_low, id: :event_price_low %>
    </div>
  
    <div class="field">
      <%= form.label "Cena maksymalna" %>
      <%= form.number_field :price_high, id: :event_price_high %>
    </div>
  
    <div class="field">
      <%= form.label "Data wydarzenia" %>
      <%= form.date_field :event_date, id: :event_event_date %>
    </div>

    <div class="field">
      <%= form.label "Ilość miejsc" %>
      <%= form.number_field :ticket_amout, id: :event_ticket_amout %>
    </div>
    
    <div class="field">
      <%= form.label "Limit wieku" %>
      <%= form.select :age_limit, [12, 16, 18]%>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

<%= link_to 'Powrót', events_path %>